# Makefile for 3270 emulation library (Windows)

LIB3270 = lib3270.a

include winenv.mk

XCPPFLAGS = $(WIN32_FLAGS) -I. -I$(THIS)/../include/windows -I$(THIS)/../include -I$(TOP)/include
CFLAGS = $(EXTRA_FLAGS) -g -Wall $(XCPPFLAGS) $(SSLCPP)

all:: $(LIB3270)

include lib3270_files.mk
include libw3270_files.mk
OBJS = $(LIB3270_OBJECTS) $(LIBW3270_OBJECTS)

$(LIB3270): $(OBJS)
	$(RM) $@
	$(AR) crs $@ $(OBJS)

favicon.o: favicon.c

favicon.c: favicon.ico mkicon$(NATIVE_SFX)
	./mkicon$(NATIVE_SFX) $< >favicon.c

mkicon.o: CC = $(NATIVECC)
mkicon.o: CFLAGS =
mkicon$(NATIVE_SFX): mkicon.o
	$(NATIVECC) -o $@ mkicon.o

clean:
	$(RM) *.o favicon.c mkicon$(NATIVE_SFX)

clobber: clean
	$(RM) $(LIB3270) *.d

-include $(OBJS:.o=.d)
